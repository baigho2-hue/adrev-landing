<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AdRev.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AdRev.Mobile"
    Title="AdRev Collect">

    <TabBar>
        <Tab Title="Accueil" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" Route="DashboardPage" />
        </Tab>
        <Tab Title="Jumelage" Icon="qr.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Collecte" Icon="form.png">
            <ShellContent ContentTemplate="{DataTemplate local:FormsPage}" Route="FormsPage" />
        </Tab>
    </TabBar>

</Shell>
