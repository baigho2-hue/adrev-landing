                             <Button Content="Actualiser" Click="RefreshPurchases_Click" Background="#7C4DFF" Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="PurchasesGrid" Grid.Row="1" Background="#161621" Foreground="White" 
                              BorderThickness="0" RowBackground="#1E1E2E" AlternatingRowBackground="#2B2B3B"
                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="True"
                              HorizontalGridLinesBrush="#3B3B4B" VerticalGridLinesBrush="#3B3B4B">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2B2B3B"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="#3B3B4B"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding PurchaseDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="Nom" Binding="{Binding FirstName}" Width="100"/>
                            <DataGridTextColumn Header="PrÃ©nom" Binding="{Binding LastName}" Width="100"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                            <DataGridTextColumn Header="HWID" Binding="{Binding Hwid}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding RequestedType}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Ok?" Binding="{Binding IsProcessed}" Width="50"/>
                            <DataGridTemplateColumn Header="Action" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="GÃ©nÃ©rer" Click="GenerateForPurchase_Click" Height="25" Padding="5,0"
                                                Background="#00E676" Foreground="Black" FontSize="11" FontWeight="Bold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Margin="0,15,0,0" Background="#161621" Padding="15" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Journal d'activitÃ© :" Foreground="#A0A0B0" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock x:Name="StatusLog" Text="PrÃªt." Foreground="#00E676" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>


