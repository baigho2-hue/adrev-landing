                            <Button Content="Copier le code" Click="Copy_Click" Height="45" Margin="0,15,0,0"
                                    Background="#3B3B4B" Foreground="White" BorderBrush="#555" BorderThickness="1" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: PURCHASE DATABASE -->
            <TabItem Header="ðŸ“Š Base d'Achats">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Historique et File d'attente des Achats" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="GÃ©rez les demandes de licences reÃ§ues via Stripe / Site web." Foreground="#A0A0B0"/>
                        </StackPanel>
