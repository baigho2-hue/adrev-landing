                                    <TextBlock Text="Hardware ID du Client :" Foreground="White" Margin="0,0,0,5"/>
                                    <TextBox x:Name="HwidInput" Height="40" Padding="10" FontSize="16" Background="#2B2B3B" Foreground="White" BorderBrush="#3B3B4B"/>
                                    <TextBlock Text="(Laissez vide pour licence institutionnelle gÃ©nÃ©rique)" Foreground="#707080" FontSize="10" Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Type de Licence :" Foreground="White" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="TypeCombo" Height="40" Background="#2B2B3B" Foreground="Black" Padding="10,8" SelectionChanged="TypeCombo_SelectionChanged" SelectedIndex="0">
                                        <ComboBoxItem Content="Version IllimitÃ©e (Unlimited)" Tag="Unlimited"/>
                                        <ComboBoxItem Content="Version Pro (Annual)" Tag="Pro"/>
                                        <ComboBoxItem Content="Version Elite" Tag="Elite"/>
                                        <ComboBoxItem Content="Version Ã‰tudiant" Tag="Student"/>
                                        <ComboBoxItem Content="Version Institutionnelle (Multiple)" Tag="Enterprise"/>
