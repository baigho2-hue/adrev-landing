                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Separator Margin="0,40" Background="#3B3B4B"/>

                            <TextBlock Text="Code d'Activation :" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox x:Name="LicenseOutput" Height="100" Padding="10" FontSize="12" IsReadOnly="True" 
