<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime"
                    xmlns:local="clr-namespace:AdRev.Desktop">

    <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <local:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="#673AB7"/> <!-- DeepPurple 500 -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#512DA8"/> <!-- DeepPurple 700 -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#CDDC39"/> <!-- Lime 500 -->
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#673AB7"/> <!-- Compatibility -->
    
    <!-- Use DynamicResources for theme colors to avoid startup crashes if they aren't loaded yet -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/> 
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBrush" Color="#DE000000"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8A000000"/>

    <SolidColorBrush x:Key="RecorderBackgroundBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="RecorderBorderBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="RecorderForegroundBrush" Color="#E65100"/>
    <SolidColorBrush x:Key="MenuBarBrush" Color="#111827"/> <!-- Very Dark Slate/Gray for better visibility -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/> <!-- Red -->

    <!-- Calm Academic Palette -->
    <SolidColorBrush x:Key="CalmHeaderBrush" Color="#0F172A"/> <!-- Deep Slate -->
    <SolidColorBrush x:Key="CalmSubHeaderBrush" Color="#1E293B"/> <!-- Slate 800 -->
    <SolidColorBrush x:Key="CalmBackgroundBrush" Color="#F1F5F9"/> <!-- Slate 50 background -->
    <SolidColorBrush x:Key="CalmBorderBrush" Color="#CBD5E1"/> <!-- Slate 300 border -->
    <SolidColorBrush x:Key="CalmTextBrush" Color="#0F172A"/> <!-- Deep Slate Text -->
    <SolidColorBrush x:Key="CalmAltBackgroundBrush" Color="#F8FAFC"/>

    <!-- Modern Button Style (Legacy adapter) -->
    <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Padding" Value="16,10"/>
    </Style>

    <!-- Implicit Button Style -->
    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>

    <!-- TextBox Style -->
    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="Margin" Value="0,8,15,8"/>
    </Style>

    <!-- Card Style (Removed ShadowDepth1 reference for MD 5.0 compatibility) -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="CornerRadius" Value="8"/>
        <!-- MD 5.0 compatibility choice: Removing Elevation until verified -->
        <!-- <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/> -->
    </Style>
    
    <Style x:Key="CompactCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- Header Text Style -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Label Style -->
    <Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Scientific Expander -->
    <Style x:Key="ScientificExpanderStyle" TargetType="Expander" BasedOn="{StaticResource MaterialDesignExpander}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Ribbon Tab Button Style (Custom RadioButton) -->
    <Style x:Key="RibbonTabButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#9CA3AF"/> <!-- Medium gray unselected -->
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4,4,0,0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="#33FFFFFF"/>
                            <Setter Property="Foreground" Value="White"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Compatibility Styles -->
    <Style x:Key="MaterialDesignTitleMedium" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Missing Window Control Styles -->
    <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E81123"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>


