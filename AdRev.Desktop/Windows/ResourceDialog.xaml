<Window x:Class="AdRev.Desktop.Windows.ResourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insérer une Ressource" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FAFAFA">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nouvelle Ressource (Tableau / Figure)" FontSize="16" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,20"/>

        <!-- Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Type de ressource :" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="TypeComboBox" SelectedIndex="0" Padding="5">
                <ComboBoxItem Content="Tableau (Numérotation Romaine)" Tag="Table"/>
                <ComboBoxItem Content="Figure / Graphique (Numérotation Arabe)" Tag="Figure"/>
            </ComboBox>
        </StackPanel>

        <!-- Title Input -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Titre :" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleBox" Height="30" VerticalContentAlignment="Center" Padding="5"/>
        </StackPanel>

        <!-- Description/Content Input -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Description / Contenu (Optionnel) :" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" IsCancel="True" Height="30" Width="100" Margin="0,0,10,0"/>
            <Button Content="Insérer" Click="Ok_Click" IsDefault="True" Height="30" Width="100" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
