<Window x:Class="AdRev.Desktop.Windows.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Modifier mon Profil" Height="380" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Border BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Mon Profil Chercheur" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBox x:Name="NameBox" materialDesign:HintAssist.Hint="Nom Complet" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,20"/>
                <TextBox x:Name="TitleBox" materialDesign:HintAssist.Hint="Titre / Profession (ex: Pr., Dr., PhD)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,20"/>
                <TextBox x:Name="InstitutionBox" materialDesign:HintAssist.Hint="Institution / Affiliation" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10"/>
                
                <TextBlock Text="Cliquez sur Enregistrer pour mettre à jour la barre latérale." FontSize="11" FontStyle="Italic" Opacity="0.6" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" IsCancel="True" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0" Foreground="Gray"/>
                <Button Content="Enregistrer" Click="Save_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
