<Window x:Class="AdRev.Desktop.Windows.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Accès Sécurisé" Height="220" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Border BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <materialDesign:PackIcon Kind="Lock" HorizontalAlignment="Center" Width="30" Height="30" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Projet Protégé" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <PasswordBox x:Name="PasswordField" materialDesign:HintAssist.Hint="Entrez le mot de passe" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
                <TextBlock x:Name="ErrorText" Text="Mot de passe incorrect" Foreground="Red" FontSize="11" Margin="0,5,0,0" Visibility="Collapsed"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" IsCancel="True" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0"/>
                <Button Content="Déverrouiller" Click="Unlock_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
