<Window x:Class="AdRev.Desktop.Windows.QuickAnalysisIntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Analyse Rapide - Configuration" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Border BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Configuration Analyse Rapide" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Veuillez renseigner les informations minimales pour l'analyse :" Margin="0,0,0,15" Opacity="0.7"/>
                
                <TextBox x:Name="TitleBox" materialDesign:HintAssist.Hint="Titre du Projet / de l'Ã‰tude" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
                <TextBox x:Name="AuthorBox" materialDesign:HintAssist.Hint="Auteur Principal" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,15"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" Click="Cancel_Click" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0" Foreground="Gray"/>
                <Button Content="Commencer" Click="Start_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
