<Window x:Class="AdRev.Desktop.Windows.ExportOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Options d'Exportation" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    
    <Border Background="White" CornerRadius="12" BorderBrush="#CBD5E1" BorderThickness="1" Margin="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Exporter les Données" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Format de sortie :" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="FormatCombo" SelectedIndex="0" Margin="0,0,0,20">
                    <ComboBoxItem Content="Excel (.xlsx)"/>
                    <ComboBoxItem Content="CSV (.csv)"/>
                </ComboBox>

                <CheckBox x:Name="CheckAnonymize" Content="Anonymiser les données sensibles (HIPAA/RGPD)" 
                          IsChecked="True" Foreground="#475569" FontWeight="Medium"/>
                <TextBlock Text="Les variables marquées comme 'Sensibles' seront masquées." 
                           FontSize="11" Foreground="#64748B" Margin="25,5,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler" IsCancel="True" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0"/>
                <Button Content="Exporter" Click="Export_Click" Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
