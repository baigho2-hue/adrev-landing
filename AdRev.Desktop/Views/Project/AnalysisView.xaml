<UserControl x:Class="AdRev.Desktop.Views.Project.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdRev.Desktop"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource CalmBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" MinWidth="250" MaxWidth="450"/> <!-- Responsive Sidebar -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource CalmAltBackgroundBrush}" BorderBrush="{StaticResource CalmBorderBrush}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Title -->
                        <RowDefinition Height="Auto"/> <!-- Import -->
                        <RowDefinition Height="Auto"/> <!-- Variables List -->
                        <RowDefinition Height="Auto"/> <!-- Analysis Plan List -->
                        <RowDefinition Height="Auto"/> <!-- Add Form -->
                    </Grid.RowDefinitions>

                <!-- 1. Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Données &amp; Variables" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Foreground="{StaticResource CalmSubHeaderBrush}"/>
                    <TextBlock Text="Gérez vos données et planifiez vos analyses." Foreground="{StaticResource CalmTextBrush}" Opacity="0.7" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- 2. Import Action -->
                <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,20" UniformCornerRadius="8" Background="White" BorderBrush="{StaticResource CalmBorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="SOURCE DE DONNÉES" FontWeight="SemiBold" FontSize="10" Foreground="{StaticResource CalmSubHeaderBrush}"/>
                                <TextBlock x:Name="ActiveDataSourceText" Text="Aucun fichier" Foreground="{StaticResource CalmTextBrush}" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                            </StackPanel>
                            <Button Grid.Column="1" Click="ImportData_Click" Style="{StaticResource MaterialDesignOutlinedButton}" Background="Transparent" Foreground="{StaticResource CalmSubHeaderBrush}" BorderBrush="{StaticResource CalmBorderBrush}" Padding="10,4" Margin="8,0,0,0" Content="Importer"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 3. Variables List -->
                <Expander Grid.Row="2" Header="Variables Détectées" Margin="0,0,0,20" IsExpanded="False">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="14"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                        <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="4" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" Height="200">
                            <ListView x:Name="VariablesList" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="8,4">
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Transformer / Recoder..." CommandParameter="{Binding}" Click="RecodeVariable_Click"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Type}" FontSize="10" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                            <materialDesign:PackIcon Kind="CheckCircle" Width="14" Height="14" Foreground="#66BB6A" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0" ToolTip="Variable Validée"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                </Expander>

                <!-- 4. Analysis Plan List -->
                <Grid Grid.Row="3" Margin="0,0,0,20" MaxHeight="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Plan d'Analyse" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Foreground="{StaticResource CalmSubHeaderBrush}" Margin="0,0,0,10"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="PlanItemsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="0,0,4,8" Padding="12" UniformCornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding TestType}" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding ResultSummary}" FontSize="11" Foreground="#43A047" FontStyle="Italic" Visibility="{Binding IsExecuted, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <Button Grid.Column="1" Click="RunPlanItem_Click" Tag="{Binding}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Lancer l'Analyse" Height="32" Width="32">
                                                    <materialDesign:PackIcon Kind="Play"/>
                                                </Button>
                                            </Grid>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                </Grid>

                <!-- 5. Add Analysis Form -->
                <materialDesign:Card Grid.Row="4" Padding="16" Background="White" UniformCornerRadius="8" BorderBrush="{StaticResource CalmBorderBrush}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="NOUVELLE ANALYSE" FontWeight="SemiBold" FontSize="10" Foreground="{StaticResource CalmSubHeaderBrush}" Margin="0,0,0,10"/>
                        
                        <TextBox x:Name="PlanTitleBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Titre de l'analyse" Foreground="{StaticResource CalmTextBrush}" Margin="0,0,0,16"/>
                        
                        <ComboBox x:Name="PlanTestTypeCombo" Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="Type de Test" Foreground="{StaticResource CalmTextBrush}" Margin="0,0,0,16" SelectionChanged="PlanTestTypeCombo_SelectionChanged"/>
                        
                        <StackPanel x:Name="VariableSelectionPanel" Visibility="Visible">
                            <ComboBox x:Name="ComboVariable1" Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="Variable (Principale)" DisplayMemberPath="Name" Margin="0,0,0,16"/>

                            <ComboBox x:Name="ComboVariable2" Style="{StaticResource MaterialDesignFloatingHintComboBox}" materialDesign:HintAssist.Hint="Variable (Comparaison)" DisplayMemberPath="Name" Margin="0,0,0,16" Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,16">
                            <CheckBox x:Name="CheckIncludeTable" Content="Tableau" IsChecked="True" Foreground="{StaticResource CalmTextBrush}" Margin="0,0,16,0"/>
                            <CheckBox x:Name="CheckIncludeChart" Content="Graphique" IsChecked="True" Foreground="{StaticResource CalmTextBrush}"/>
                        </StackPanel>

                        <Button Content="Ajouter au Plan" Click="AddToPlan_Click" Style="{StaticResource MaterialDesignRaisedButton}" Background="{StaticResource CalmSubHeaderBrush}" Foreground="White"/>
                    </StackPanel>
                </materialDesign:Card>

                </Grid>
            </ScrollViewer>
        </Border>

        <!-- MAIN CONTENT (REPORT) -->
        <Grid Grid.Column="1" Background="{DynamicResource MaterialDesignPaper}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/> <!-- Export Toolbar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="32,24,32,10">
                <TextBlock Text="Rapport de Résultats" FontSize="28" FontWeight="Light" Foreground="{StaticResource CalmSubHeaderBrush}"/>
            </StackPanel>

            <!-- Export Toolbar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="32,0,32,16" HorizontalAlignment="Right">
                <Button Click="SaveToProject_Click" Style="{StaticResource MaterialDesignRaisedButton}" Background="#4CAF50" BorderBrush="#4CAF50" Margin="0,0,16,0" ToolTip="Sauvegarder les résultats dans le projet">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Enregistrer"/>
                    </StackPanel>
                </Button>
                <Button Click="ExportReport_Click" Style="{StaticResource MaterialDesignRaisedButton}" Background="#FF9800" BorderBrush="#FF9800" ToolTip="Exporter vers PDF/Word">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Export" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Exporter"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <materialDesign:Card Grid.Row="2" Margin="32,0,32,32" UniformCornerRadius="2" VerticalAlignment="Stretch">
                <FlowDocumentScrollViewer x:Name="AnalysisDocViewer" VerticalScrollBarVisibility="Auto" BorderThickness="0">
                    <FlowDocument x:Name="AnalysisDoc" PagePadding="50" Background="White" ColumnWidth="2000" FontFamily="Calibri" FontSize="14" LineHeight="20">
                        <Paragraph TextAlignment="Center" Margin="0,0,0,30">
                            <Run Text="Rapport d'Analyse Statistique AdRev" FontSize="24" FontWeight="Light" Foreground="#37474F"/>
                        </Paragraph>
                        <Paragraph TextAlignment="Center">
                            <Run Text="Sélectionnez une analyse dans le menu de gauche et cliquez sur ▶ pour générer les résultats." Foreground="#90A4AE" FontSize="16"/>
                        </Paragraph>
                    </FlowDocument>
                </FlowDocumentScrollViewer>
            </materialDesign:Card>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.ColumnSpan="2" Background="#80FFFFFF" Visibility="Collapsed" Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="50" Height="50" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Traitement en cours..." Margin="0,20,0,0" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
