<UserControl x:Class="AdRev.Desktop.Views.Project.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AdRev.Desktop.Views.Project"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1150">
    
    <UserControl.Resources>
        <Style x:Key="LibraryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource CalmBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Background" Value="#F5F9FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource CalmBackgroundBrush}" Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/> 
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="*"/> 
            </Grid.RowDefinitions>

            <!-- Header & Global Actions -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource LibraryCardStyle}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock Text="DOCUMENTATION SCIENTIFIQUE" FontSize="20" FontWeight="Black" Foreground="{StaticResource CalmHeaderBrush}"/>
                        <TextBlock Text="Collectez, analysez et prévisualisez vos sources" Foreground="{StaticResource CalmSubHeaderBrush}" Opacity="0.7"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Click="AddFile_Click" Style="{StaticResource MaterialDesignRaisedButton}" Background="{StaticResource PrimaryBrush}" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilePlus" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Document"/>
                            </StackPanel>
                        </Button>
                        <Button Click="AddByIdentifier_Click" Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="{StaticResource PrimaryBrush}" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Fingerprint" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="DOI / PMID"/>
                            </StackPanel>
                        </Button>
                        <Button Click="AddLink_Click" Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="{StaticResource PrimaryBrush}" Foreground="{StaticResource PrimaryBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LinkVariant" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Lien Web"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Library List -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Full Text Search -->
                <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,15" BorderBrush="{StaticResource CalmBorderBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="MagnifyScan" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1" materialDesign:HintAssist.Hint="Recherche avancée (incluant contenu PDF)..." 
                                 Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" BorderThickness="0"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="LibraryItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource LibraryCardStyle}" Cursor="Hand" MouseLeftButtonUp="OnItemSelect">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Width="36" Height="36" Background="{StaticResource CalmBackgroundBrush}" CornerRadius="18" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="{Binding IconKind}" Foreground="{StaticResource CalmSubHeaderBrush}" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource CalmHeaderBrush}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="{Binding StatusColor}" CornerRadius="4" Padding="6,1" Margin="0,4,8,0">
                                                    <TextBlock Text="{Binding StatusLabel}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </Border>
                                                <TextBlock Text="{Binding FileName}" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}" Opacity="0.5" VerticalAlignment="Center" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Details & Preview Panel -->
            <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="8" BorderBrush="{StaticResource CalmBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid x:Name="DetailsPanel" Visibility="Collapsed">
                        <TabControl Style="{StaticResource MaterialDesignTabControl}" materialDesign:ColorZoneAssist.Mode="Standard">
                            <TabItem Width="150" Header="GÉRER">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <Border Padding="25">
                                        <StackPanel>
                                        <TextBlock Text="DETAILS DE LA SOURCE" FontSize="12" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,15"/>
                                        <TextBlock x:Name="DetailTitle" Text="Titre du document" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                        
                                        <Grid Margin="0,15,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Statut de lecture :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}" Margin="0,0,0,5"/>
                                                <ComboBox x:Name="StatusCombo" SelectionChanged="StatusCombo_SelectionChanged">
                                                    <ComboBoxItem Content="À lire" Tag="ToBeRead"/>
                                                    <ComboBoxItem Content="En cours" Tag="Reading"/>
                                                    <ComboBoxItem Content="Lu" Tag="Read"/>
                                                    <ComboBoxItem Content="Non pertinent" Tag="Irrelevant"/>
                                                </ComboBox>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Importance :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}" Margin="0,0,0,5"/>
                                                <materialDesign:RatingBar x:Name="ImportanceRating" Value="3" Foreground="#FFC107" ValueChanged="ImportanceRating_ValueChanged"/>
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Text="Notes &amp; Résumé personnel :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}" Margin="0,25,0,5"/>
                                        <TextBox x:Name="DetailDescription" TextWrapping="Wrap" AcceptsReturn="True" Height="150"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}" VerticalContentAlignment="Top"
                                                 TextChanged="DetailDescription_TextChanged" materialDesign:HintAssist.Hint="Consignez ici vos réflexions sur cette source..."/>

                                        <Expander Header="MÉTADONNÉES BIBLIOGRAPHIQUES" Margin="0,15,0,0" IsExpanded="False">
                                            <StackPanel Margin="0,10,0,0">
                                                <TextBlock Text="Auteurs :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}"/>
                                                <TextBlock x:Name="DetailAuthors" Text="--" FontWeight="SemiBold" Margin="0,0,0,10" TextWrapping="Wrap"/>
                                                
                                                <TextBlock Text="Journal / Source :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}"/>
                                                <TextBlock x:Name="DetailJournal" Text="--" FontWeight="SemiBold" Margin="0,0,0,10" TextWrapping="Wrap"/>
                                                
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Année :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}"/>
                                                        <TextBlock x:Name="DetailYear" Text="--" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Identifiants :" FontSize="11" Foreground="{StaticResource CalmSubHeaderBrush}"/>
                                                        <TextBlock x:Name="DetailIdentifier" Text="--" FontWeight="SemiBold" Margin="0,0,0,10" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Expander>

                                        <CheckBox x:Name="IsCitedCheck" Content="Marquer comme cité dans le manuscrit" Margin="0,20,0,0" Checked="IsCited_Changed" Unchecked="IsCited_Changed" Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold"/>

                                        <Separator Margin="0,30,0,20" Opacity="0.5"/>
                                        
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Click="OpenItem_Click" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="OpenInApp" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Ouvrir en externe"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Click="DeleteItem_Click" Style="{StaticResource MaterialDesignFlatButton}" Foreground="#F44336">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Supprimer"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                            
                            <TabItem Width="150" x:Name="PreviewTab" Header="LIRE / APERÇU">
                                <Grid Background="#F0F0F0">
                                    <wv2:WebView2 x:Name="PdfViewer" Margin="0"/>
                                    <Border x:Name="NoPreviewPanel" Background="White" Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="FileCancel" Width="48" Height="48" Foreground="#BBB" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Aperçu non disponible pour ce type de lien." Foreground="#888" Margin="0,15,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>

                    <StackPanel x:Name="NoSelectionText" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Library" Width="64" Height="64" Foreground="{StaticResource CalmBorderBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sélectionnez une source pour l'analyser ou la lire." 
                                   Foreground="{StaticResource CalmSubHeaderBrush}" Opacity="0.5" Margin="0,20,0,0" FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
