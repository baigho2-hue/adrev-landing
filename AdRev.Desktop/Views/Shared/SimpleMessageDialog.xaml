<UserControl x:Class="AdRev.Desktop.Views.Shared.SimpleMessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="350" MaxWidth="450">
    <materialDesign:Card UniformCornerRadius="8" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <materialDesign:PackIcon x:Name="IconDisplay" Kind="Information" Width="24" Height="24" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="TitleText" Text="Titre" Style="{StaticResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock x:Name="MessageText" Grid.Row="1" Text="Message content goes here..." TextWrapping="Wrap" Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,25" Opacity="0.8"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="ANNULER" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,8,0" Click="CancelButton_Click" Visibility="Collapsed"/>
                <Button x:Name="OkButton" Content="OK" Style="{StaticResource MaterialDesignFlatButton}" Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
